import insta_9 from "../img/instagram/insta_9.jpg";
import insta_10 from "../img/instagram/insta_10.jpg";
import insta_11 from "../img/instagram/insta_11.jpg";
import insta_12 from "../img/instagram/insta_12.jpg";
---

<section
	class="h-full md:h-screen w-full flex flex-col items-center justify-center bg-[--primary] py-20 md:py-0">
	<h2
		class="font-[--text1] text-[--secondary] text-5xl px-2 md:px-0 md:text-7xl pb-0 m-0 p-0 gap-0"
		id="text">
		Sushi App
		<p class="text-2xl text-center">en instagram</p>
	</h2>
	<div
		class="font-light md:items-end text-sm md:text-xl z-0 text-[--secondary]">
		<a
			class="flex items-center gap-2 z-100 hover:scale-105 transition-transform duration-300 ease-in-out"
			target="_blank"
			href="https://www.instagram.com/sushiapp/"
			><img class="max-w-10" src={instagram.src} alt="" />
			@sushi_app
		</a>
		<span class="font-extralight text-sm opacity-75"
			>SÃºmate a nuestra comunidad <br />
			para disfrutar del <strong> mejor sushi.</strong>
		</span>
	</div>

	<article
		class="text-6xl md:text-[12vw] overflow-hidden pt-20 w-full"
		id="slider-component">
		<aside>
			<div class="slider-container-1">
				<img
					src={insta_1.src}
					alt="instagram picture"
					class="max-w-[350px] rounded-xl aspect-square"
				/>
			</div>
			<div class="slider-container-2">
				<img
					src={insta_2.src}
					alt="instagram picture"
					class="max-w-[250px] rounded-xl aspect-square"
				/>
			</div>
			<div class="slider-container-1">
				<img
					src={insta_3.src}
					alt="instagram picture"
					class="max-w-[350px] rounded-xl aspect-square"
				/>
			</div>
			<div class="slider-container-2">
				<img
					src={insta_4.src}
					alt="instagram picture"
					class="max-w-[250px] rounded-xl aspect-square"
				/>
			</div>
			<div class="slider-container-1">
				<img
					src={insta_5.src}
					alt="instagram picture"
					class="max-w-[350px] rounded-xl aspect-square"
				/>
			</div>
			<div class="slider-container-2">
				<img
					src={insta_6.src}
					alt="instagram picture"
					class="max-w-[250px] rounded-xl aspect-square"
				/>
			</div>
			<div class="slider-container-1">
				<img
					src={insta_7.src}
					alt="instagram picture"
					class="max-w-[350px] rounded-xl aspect-square"
				/>
			</div>
			<div class="slider-container-2">
				<img
					src={insta_8.src}
					alt="instagram picture"
					class="max-w-[250px] rounded-xl aspect-square"
				/>
			</div>
			<div class="slider-container-1">
				<img
					src={insta_9.src}
					alt="instagram picture"
					class="max-w-[350px] rounded-xl aspect-square"
				/>
			</div>
			<div class="slider-container-2">
				<img
					src={insta_10.src}
					alt="instagram picture"
					class="max-w-[250px] rounded-xl aspect-square"
				/>
			</div>
			<div class="slider-container-2">
				<img
					src={insta_11.src}
					alt="instagram picture"
					class="max-w-[250px] rounded-xl aspect-square"
				/>
			</div>
			<div class="slider-container-2">
				<img
					src={insta_12.src}
					alt="instagram picture"
					class="max-w-[250px] rounded-xl aspect-square"
				/>
			</div>
		</aside>
	</article>
</section>

<script>
	const slider = document.getElementById("slider-component");
	let isPaused = false;

	slider?.addEventListener("mouseenter", () => {
		isPaused = true;
		slider.style.animation = "paused";
		console.log("paused");
	});

	slider?.addEventListener("mouseleave", () => {
		isPaused = false;
		slider.style.animationPlayState = "running";
		console.log("running");
	});
</script>

<style>
	#text {
		font-family: var(--text2);
	}
	#tetx2 {
		font-family: var(--text1);
	}
	@media (max-width: 768px) {
		aside {
			animation: slide 100s linear infinite;
		}
	}
	@media (min-width: 1024px) {
		aside {
			animation: slide 400s linear infinite;
		}
	}
	aside {
		display: flex;
		align-items: start;
		justify-content: center;
		width: 100%;
		gap: 2.5rem;
	}
	aside:has(:hover) {
		animation-play-state: paused;
	}

	@keyframes slide {
		0% {
			transform: translateX(0);
		}
		100% {
			transform: translateX(-500%);
		}
	}
</style>
