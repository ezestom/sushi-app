---
import instagram from "../icons/instagram.svg";
import insta_1 from "../img/instagram/insta_1.jpg";
import insta_2 from "../img/instagram/insta_2.jpg";
import insta_3 from "../img/instagram/insta_3.jpg";
import insta_4 from "../img/instagram/insta_4.jpg";
