---
import presentation from "../../videos/presentation.mp4";
import Scroll from "../Scroll.astro";
import doDelivery from "../../icons/doDelivery.svg";
import whatsapp from "../../icons/whatsapp.svg";
import cookie from "../../icons/cookie.svg";
import sushi from "../../icons/sushi.svg";
import Header from "../Header.astro";
---

<script>
	import "transition-style";
</script>

<section
	class="h-full md:h-screen bg-[--primary] relative pt-44 md:pt-0"
	transition-style="in:circle:bottom-left">
	<Header href2="/navbar" />

	<article class="flex items-center justify-center p-0 -mt-10">
		<aside
			class="w-full flex flex-col items-center justify-center relative z-10">
			<div
				class="md:-translate-x-40 md:translate-y-20 flex flex-col items-start text-start text-[--secondary] mx-auto w-fit">
				<span
					class="text-base pb-5 uppercase text-start font-extralight opacity-25"
					id="text2">
					Sibuya urban sushi bar
				</span>
				<p
					class="text-5xl md:text-[100px] -mt-6 font-[--text1]"
					id="text">
					Disfruta del inesperado
				</p>
			</div>
			<picture class="-z-10">
				<video
					muted
					loop
					autoplay
					src={presentation}
					class="max-w-[720px] w-full brightness-125">
				</video>
			</picture>
			<div id="text" class="pt-12 md:pt-0">
				<p
					class="text-5xl md:text-[100px] -mt-6 font-[--text1] text-[--secondary] md:-translate-y-10 md:translate-x-72">
					Placer del sushi
				</p>
			</div>
		</aside>
		<div
			class="flex justify-between absolute bottom-20 w-full items-center">
			<a class="px-6 max-w-28 z-20 fixed bottom-4" href="#"
				><img src={cookie.src} alt="cookie icon" />
			</a>
			<a class="px-6 w-full z-20 relative hidden md:block" href="#">
				<img
					src={doDelivery.src}
					alt="delivery icon"
					class="absolute animate-[spin_15s_ease-in-out_infinite] w-28 m-auto top-0 right-0 left-0 bottom-0"
				/>
				<img
					src={sushi.src}
					alt="sushi icon"
					class="absolute top-0 w-16 bg-[--secondary] rounded-full p-1 m-auto right-0 left-0 bottom-0"
				/>
			</a>
			<a class="px-6 max-w-24 z-20 fixed right-0 bottom-4" href="#"
				><img src={whatsapp.src} alt="whatsapp icon" /></a
			>
		</div>
		<Scroll />
	</article>

	<style>
		#text {
			font-family: var(--text2);
		}
		#text2 {
			font-family: var(--text1);
		}
		@media (max-width: 1600px) {
			aside {
				margin-top: -4rem;
			}
		}
	</style>
</section>
