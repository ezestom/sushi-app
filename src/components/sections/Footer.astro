---
import upArrow from "../../icons/upArrow.svg";
import { Form } from "../../components/Form/Form.jsx";
---

<footer class="bg-[#262626] pt-20 text-[--secondary] relative z-10">
	<!-- color foooter #262626 -->
	<a
		href="#top"
		class="bg-[--secondary] p-2 rounded-full absolute right-5 top-5 max-w-12 hover:scale-105 transition">
		<img src={upArrow.src} class="" alt="arrow icon" />
	</a>
	<div class="w-full max-w-[800px] mx-auto">
		<div
			class="grid grid-cols-2 md:place-items-center text-center px-4 py-6 lg:py-8">
			<div>
				<h2 class="mb-2 text-2xl opacity-50 text-start md:pb-5">
					Sushi App
				</h2>
				<ul class="text-sm text-start font-extralight">
					<li class="mb-4">
						<a
							target="_blank"
							href="https://www.instagram.com/sushiapp/"
							class="hover:underline">Instagram</a
						>
					</li>
					<li class="mb-4">
						<Form
							button="Trabaja con nosotros"
							toast_message="Tu mensaje ha sido enviado con éxito"
							name="Nombre y Apellido"
							email="Email"
							email_placeholder="ejemplo@email.com"
							message="Mensaje"
							message_placeholder="Escribe tu mensaje aquí..."
							send="Enviar mi mensaje"
							client:visible
						/>
					</li>
					<li class="mb-4">
						<a href="/stores" class="hover:underline">Locales</a>
					</li>
				</ul>
			</div>
			<div>
				<h2 class="mb-2 text-2xl opacity-50 text-start md:pb-5">
					Teléfonos
				</h2>
				<ul class="text-sm text-start font-extralight">
					<li class="mb-4">
						<span>Zonamerica: </span>
						<a
							href="tel:+25182329"
							target="_blank"
							class="hover:underline">
							#25182329
						</a>
					</li>
					<li class="mb-4">
						<span>Montevideo Shopping: </span>
						<a
							href="tel:+26286215"
							target="_blank"
							class="hover:underline">#26286215</a
						>
					</li>
					<li class="mb-4">
						<span>Parque Miramar: </span>
						<a
							href="tel:+26057810"
							target="_blank"
							class="hover:underline">#26057810</a
						>
					</li>
				</ul>
			</div>
		</div>
		<!-- <div class="px-4 py-6 md:flex md:items-center textstify-between">
			<span class="text-xs sm:text-center"
				>© 2024 <a href="https://flowbite.com/">Rhino™</a>. All Rights
				Reserved.
			</span>
		</div> -->
	</div>
</footer>
