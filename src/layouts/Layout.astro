---
import { ViewTransitions } from "astro:transitions";

interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
	<head>
		<meta
			name="title"
			content="Sushi App - Encuentra los mejores restaurantes de sushi cerca de ti"
		/>
		<meta
			name="description"
			content="Sushi App es una aplicación que te permite encontrar los mejores restaurantes de sushi cerca de ti, conoce sus menús, precios y opiniones de otros usuarios."
		/>
		<meta
			name="keywords"
			content="sushi, restaurantes, comida japonesa, sushi app, sushi cerca de mi, sushi delivery, sushi take away, sushi a domicilio, sushi para llevar"
		/>
		<meta name="robots" content="index, follow" />
		<meta name="language" content="Spanish" />
		<meta name="author" content="Sushi App" />
		<meta name="canonical" content="www.sushiapp.com" />

		<meta charset="UTF-8" />
		<meta name="description" content="Astro description" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
	</head>
	<body>
		<slot />
		<ViewTransitions />
	</body>
</html>

<script>
	import "@fontsource/bebas-neue";
	import "@fontsource-variable/onest";
</script>
<style is:global>
	:root {
		--primary: #292929;
		--secondary: #abd58a;
		/* --primary: #abd58a ;
		--secondary: #292929; */
		--text1: "Onest Variable", system-ui, -apple-system, BlinkMacSystemFont,
			"Segoe UI", Roboto, "Helvetica Neue", Arial, sans-serif;
		--text2: "Bebas Neue", system-ui, -apple-system, BlinkMacSystemFont,
			"Segoe UI", Roboto, "Helvetica Neue", Arial, sans-serif;
	}

	html {
		font-family:
			"Onest Variable",
			system-ui,
			-apple-system,
			BlinkMacSystemFont,
			"Segoe UI",
			Roboto,
			"Helvetica Neue",
			Arial,
			sans-serif;
		max-width: 100vw;
	}
	body {
		scroll-behavior: smooth;
	}
</style>
